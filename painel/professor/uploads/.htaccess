# Permitir acesso Ã s imagens
<Files "*.jpg">
    Order Allow,Deny
    Allow from all
</Files>

<Files "*.jpeg">
    Order Allow,Deny
    Allow from all
</Files>

<Files "*.png">
    Order Allow,Deny
    Allow from all
</Files>

<Files "*.gif">
    Order Allow,Deny
    Allow from all
</Files>

<Files "*.webp">
    Order Allow,Deny
    Allow from all
</Files>

# Negar acesso a outros tipos de arquivo
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>
